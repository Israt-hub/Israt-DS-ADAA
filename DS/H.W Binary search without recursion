#include <stdio.h>
int binary_search(int A[], int n, int x) {
    int low, high, mid;
    low = 0;
    high = n - 1;
    while (low <= high) {
        mid = (low + high) / 2;
        if (A[mid] == x) {
            return mid;  
        }
        if (A[mid] < x) {
            low = mid + 1; 
        } else {
            high = mid - 1; 
        }
    }
    return -1; 
}
int main() {
    int arr[] = {10, 20, 30, 40, 50, 60}; 
    int n = 6;                             
    int x = 40;                            
    int result;
    result = binary_search(arr, n, x);
    if (result != -1) {
        printf("Element %d found at index %d\n", x, result);
    } else {
        printf("Element %d not found in the array\n", x);
    }

    return 0;
}
